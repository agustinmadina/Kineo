<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ownhealth.kineo.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/y_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/joint_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:textSize="20sp"
            tools:text="Agustin Madina" />

        <TextView
            android:id="@+id/movement_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:textSize="20sp"
            tools:text="Agustin Madina" />

        <TextView
            android:id="@+id/x_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/y_actual" />

        <TextView
            android:id="@+id/z_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/x_actual" />

        <android.support.v7.widget.CardView
            android:id="@+id/top_circular_container"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/measured_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="55dp"
                    android:gravity="center"
                    android:textColor="@color/green_details"
                    android:textSize="45sp"
                    tools:text="50°" />

                <TextView
                    android:id="@+id/measured_final"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/measured_actual"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="55dp"
                    android:gravity="center"
                    android:textColor="@color/violet_details"
                    android:textSize="45sp"
                    tools:text="50°" />

                <com.ownhealth.kineo.utils.AngleView
                    android:id="@+id/angle_view"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/ready_to_measure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Place the device in position, and press the Play button to start the measurement"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/last_5_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/last_5_measures"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:id="@+id/measurments_container"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/last_5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/unselected_grey"
                    android:textSize="15sp"
                    tools:text="Elbow" />

                <TextView
                    android:id="@+id/last_5_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:layout_gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/unselected_grey"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/last_5_1"
                    tools:text="Elbow" />

                <TextView
                    android:id="@+id/last_5_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/unselected_grey"
                    android:textSize="15sp"
                    tools:text="Elbow" />

                <TextView
                    android:id="@+id/last_5_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/unselected_grey"
                    android:textSize="15sp"
                    tools:text="Elbow" />

                <TextView
                    android:id="@+id/last_5_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/unselected_grey"
                    android:textSize="15sp"
                    tools:text="Elbow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/delete_5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:src="@android:drawable/ic_delete"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/delete_5_2"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:src="@android:drawable/ic_delete"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/delete_5_3"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:src="@android:drawable/ic_delete"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/delete_5_4"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center_horizontal"
                    android:src="@android:drawable/ic_delete"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/delete_5_5"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:src="@android:drawable/ic_delete"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/fab_start_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        app:srcCompat="@drawable/ic_media_play" />
</RelativeLayout>
